<style>
    .floating-image-wrapper {
        position: relative;
        top: -100px; /* Resmi yukarı taşıyoruz */
        display: flex;
        justify-content: center;
    }

    .p-absolute {
        position: absolute;
        z-index: -1; /* SVG'nin resmin altında kalmasını sağlar */
        top: -140px; /* İkonu hafif yukarı aldık */
    }

    .shadow-custom {
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); /* Gölge ekliyoruz */
        border-radius: 50%; /* Yuvarlak yapıyoruz */
    }

    .page-header .container .row.align-items-center {
        margin-top: -100px; /* Yazıları yukarı çekiyoruz */
    }


    .icon-left {
        margin-left: -50px; /* Değeri ihtiyaca göre ayarlayın */
    }


    .button-container {
        display: flex;
        justify-content: flex-start; /* Butonu sola hizalar */
        margin-top: -60px; /* Yukarı doğru kaydırır */
        padding-left: 20px; /* Sol kenardan biraz boşluk bırakır */
    }

    .custom-button {
        background-color: #ff6716; /* Turuncu renk */
        color: white;
        padding: 15px 40px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        display: inline-block;
        margin-top: 20px;
        position: relative;
    }

        .custom-button:hover {
            background-color: black; /* Üzerine gelince siyah olacak */
            color: white; /* Yazı rengi beyaz olacak */
        }

    .btn-short {
        width: auto; /* Butonun genişliğini otomatik ayarla */
        padding: 0.90rem 1.5rem; /* Yukarı/aşağı ve yanlardan daha fazla boşluk ayarla */
        display: flex; /* Flex kullanarak simgeleri ve metni yatay hizala */
        align-items: center; /* Dikey hizalamayı merkezleştir */
        font-size: 1.25rem; /* Font boyutunu büyüt (1.25rem) */
    }

    .custom-hr {
        border: none; /* Varsayılan sınırı kaldırıyoruz */
        height: 4px; /* Kalınlık */
        background-color: #ff6716; /* Rengi buradan ayarlıyoruz */
    }

    .owl-carousel {
        display: flex; /* Flexbox ile yan yana hizalama sağlıyoruz */
        justify-content: center; /* Ortada hizalamak için */
    }

    .owl-stage {
        display: flex; /* Kartların yan yana gelmesi için flex kullanılıyor */
    }

    .owl-item {
        display: flex;
        justify-content: center;
        margin-right: 20px; /* Kartlar arası boşluk artırıldı */
        width: 300px; /* Kart genişliği artırıldı */
    }

    .card {
        width: 100%; /* Kart genişliği %100 yapılır, böylece esnek olacak */
        max-width: 450px; /* Maksimum genişlik 350px olarak ayarlandı */
    }

    /* Kartların genişliğini ayarlamak için */
    .custom-card-style-1 {
        width: 420px; /* Kartların genişliği */
    }

    .custom-social-icons {
        list-style: none; /* Madde işaretlerini kaldırır */
        padding: 0; /* Varsayılan padding'i kaldırır */
        display: flex; /* İkonları yan yana yerleştirir */
        justify-content: center; /* İkonları ortalar */
    }

        .custom-social-icons li {
            margin: 0 15px; /* Her iki tarafta 15 piksel boşluk bırakır */
        }

            .custom-social-icons li:last-child {
                margin-right: 0; /* Son ikonun sağında boşluk bırakmaz */
            }
</style>


