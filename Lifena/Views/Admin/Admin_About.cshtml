@using Lifena.Models.Entity;
@model List<TblAbout>
@{
    ViewBag.Title = "Admin_About";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<style>
    .floating-image-wrapper {
        position: relative;
        top: -100px; /* Resmi yukarı taşıyoruz */
        display: flex;
        justify-content: center;
    }

    .p-absolute {
        position: absolute;
        z-index: -1; /* SVG'nin resmin altında kalmasını sağlar */
        top: -140px; /* İkonu hafif yukarı aldık */
    }

    .shadow-custom {
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); /* Gölge ekliyoruz */
        border-radius: 50%; /* Yuvarlak yapıyoruz */
    }

    .page-header .container .row.align-items-center {
        margin-top: -100px; /* Yazıları yukarı çekiyoruz */
    }


    .icon-left {
        margin-left: -50px; /* Değeri ihtiyaca göre ayarlayın */
    }


    .button-container {
        display: flex;
        justify-content: flex-start; /* Butonu sola hizalar */
        margin-top: -60px; /* Yukarı doğru kaydırır */
        padding-left: 20px; /* Sol kenardan biraz boşluk bırakır */
    }

    .custom-button {
        background-color: #ff6716; /* Turuncu renk */
        color: white;
        padding: 15px 40px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        display: inline-block;
        margin-top: 20px;
        position: relative;
    }

        .custom-button:hover {
            background-color: black; /* Üzerine gelince siyah olacak */
            color: white; /* Yazı rengi beyaz olacak */
        }

    .btn-short {
        width: auto; /* Butonun genişliğini otomatik ayarla */
        padding: 0.90rem 1.5rem; /* Yukarı/aşağı ve yanlardan daha fazla boşluk ayarla */
        display: flex; /* Flex kullanarak simgeleri ve metni yatay hizala */
        align-items: center; /* Dikey hizalamayı merkezleştir */
        font-size: 1.25rem; /* Font boyutunu büyüt (1.25rem) */
    }

    .custom-hr {
        border: none; /* Varsayılan sınırı kaldırıyoruz */
        height: 4px; /* Kalınlık */
        background-color: #ff6716; /* Rengi buradan ayarlıyoruz */
    }

    .owl-carousel {
        display: flex; /* Flexbox ile yan yana hizalama sağlıyoruz */
        justify-content: center; /* Ortada hizalamak için */
    }

    .owl-stage {
        display: flex; /* Kartların yan yana gelmesi için flex kullanılıyor */
    }

    .owl-item {
        display: flex;
        justify-content: center;
        margin-right: 20px; /* Kartlar arası boşluk artırıldı */
        width: 300px; /* Kart genişliği artırıldı */
    }

    .card {
        width: 100%; /* Kart genişliği %100 yapılır, böylece esnek olacak */
        max-width: 450px; /* Maksimum genişlik 350px olarak ayarlandı */
    }

    /* Kartların genişliğini ayarlamak için */
    .custom-card-style-1 {
        width: 420px; /* Kartların genişliği */
    }

    .custom-social-icons {
        list-style: none; /* Madde işaretlerini kaldırır */
        padding: 0; /* Varsayılan padding'i kaldırır */
        display: flex; /* İkonları yan yana yerleştirir */
        justify-content: center; /* İkonları ortalar */
    }

        .custom-social-icons li {
            margin: 0 15px; /* Her iki tarafta 15 piksel boşluk bırakır */
        }

            .custom-social-icons li:last-child {
                margin-right: 0; /* Son ikonun sağında boşluk bırakmaz */
            }
</style>


<section class="page-header page-header-modern bg-transparent">
    <div class="container pt-5 mt-0">
        <div class="col text-center">
            <h1 class="text-color-dark text-8 font-weight-bold">Hakkımızda</h1>
        </div>
        <div class="container my-5 pb-2">
            <div class="row align-items-center mb-4">
                <div class="row align-items-center justify-content-around mt-3">
                    <div class="col-lg-4 text-end position-relative pt-3 max-width-custom-1">
                        <div class="p-absolute left-0" style="top: -125px; margin-left: -50px;">
                            <!-- Burada margin-left ekledik -->
                            <div data-plugin-float-element data-plugin-options="{'startPos': 'top', 'speed': 10.0, 'transition': true, 'transitionDuration': 1000}">
                                <img width="470" height="451" src="~/img/demos/business-consulting-5/svg/icon-bg-2.svg" alt="" />
                            </div>
                        </div>

                        <div class="floating-image-wrapper">
                            <img width="376" height="350" src="~/img/demos/business-consulting-5/about/hakkımızda1.png" alt="Açıklama" class="rounded-circle shadow-custom" />
                        </div>
                    </div>
                    <div class="col-lg-7 text-center text-lg-start">
                        @foreach (var item in Model)
                        {
                            <h4 class="mt-5 pt-4">@item.title</h4>
                            <br />
                            <p>@item.description</p>
                            <div class="row justify-content-center">
                                <div class="col-md-9 col-lg-12 text-center">
                                    <div class="button-container">
                                        <a href="@Url.Action("EditAbout", "Admin", new { id = item.id })" class="btn btn-warning btn-lg" style="margin-left: -360px;">Düzenle</a>

                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
