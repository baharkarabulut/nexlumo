
@{
    ViewBag.Title = "Admin_NewUser";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<style>
    .custom-header {
        color: white !important; /* Beyaz yazı rengi */
    }

    .custom-card {
        max-width: 600px; /* Kartın maksimum genişliği */
        margin: 0 auto; /* Ortalamak için */
    }
</style>
<form method="post">
    <div class="container-fluid py-4">
        <div class="card custom-card border-0 shadow-lg rounded-3">
            <div class="card-header bg-warning p-2">
                <!-- Daha az padding -->
                <h6 class="mb-0 custom-header">Yeni Kullanıcı Ekleme İşlemi</h6>
            </div>
            <div class="card-body p-3">
                <!-- Daha az padding -->
                <ul class="list-group mb-4">
                    <li class="list-group-item border-0 d-flex justify-content-between align-items-center border-radius-lg">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="example-text-input" class="form-control-label">Kullanıcı adı</label>
                                    <input class="form-control" type="text" id="username" name="username" value="">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="example-text-input" class="form-control-label">Şifre</label>
                                    <input class="form-control" type="text" id="password" name="password" value="">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <button class="btn btn-info">Kaydet</button>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>

</form>
