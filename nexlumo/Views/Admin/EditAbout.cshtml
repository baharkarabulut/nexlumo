@model Lifena.Models.Entity.TblAbout
@{
    ViewBag.Title = "EditAbout";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<div class="container-fluid py-4">
    <div class="card custom-card border-0 shadow-lg rounded-3">
        <div class="card-header bg-warning p-2">
            <!-- Daha az padding -->
            <h6 class="mb-0 custom-header">Hakkımızda Kısmı Düzenleme İşlemi</h6>
        </div>
        <div class="card-body p-3">
            <form asp-action="EditAbout" method="post">
                <div class="form-group">
                    <label for="title">Başlık</label>
                    <input type="text" class="form-control" id="title" name="title" value="@Model.title" required />
                </div>
                <div class="form-group">
                    <label for="description">Açıklama</label>
                    <textarea class="form-control" id="description" name="description" rows="5" required>@Model.description</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>